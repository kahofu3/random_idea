# Interactive Brokers Connection Settings
IB_HOST=127.0.0.1
IB_PORT=7497  # 7497 for paper trading, 7496 for live trading
IB_CLIENT_ID=1
IB_ACCOUNT=DU1234567  # Your IB account number
IB_TRADING_MODE=paper  # 'paper' or 'live'

# Trading Settings
TRADEABLE_SYMBOL=SPY  # SPY for ETF, ES for futures
TRADEABLE_SEC_TYPE=STK  # STK for stocks/ETFs, FUT for futures
TRADEABLE_EXCHANGE=SMART  # SMART for IB smart routing

# Position Sizing
MAX_POSITION_SIZE=100
POSITION_SIZING_METHOD=fixed  # 'fixed' or 'risk_based'
RISK_PER_TRADE=0.02  # 2% risk per trade
MAX_DAILY_TRADES=5

# Risk Management
MAX_DAILY_LOSS=0.05  # 5% max daily loss
MAX_POSITIONS=1
FORCE_CLOSE_TIME=15:55  # Close all positions at 3:55 PM

# Notifications (Optional)
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

EMAIL_ENABLED=false
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient@gmail.com
EMAIL_PASSWORD=your_app_password

# Strategy Overrides (Optional)
STRATEGY_OVERRIDE_ENABLED=false
MIN_CONFIRMATIONS=1
STOP_LOSS_MULTIPLIER=1.0
TAKE_PROFIT_MULTIPLIER=1.0

# Logging
LOG_LEVEL=INFO